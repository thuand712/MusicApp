<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">
    <TextView
        android:gravity="center"
        android:textSize="30sp"
        android:textColor="#3e3b3b"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:id="@+id/txtTitlePlayList"
        android:text="NHỊP ĐIỆU CẢM XÚC"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/lvPlayList"
        android:layout_below="@id/txtTitlePlayList"/>
    <TextView
        android:text="Xem thêm PlayList"
        android:textSize="19sp"
        android:drawablePadding="10dp"
        android:drawableLeft="@drawable/iconmoreplaylist"
        android:paddingLeft="5dp"
        android:layout_below="@id/lvPlayList"
        android:id="@+id/txtMorePlayList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#0a0a0a"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:background="#c9c7c7"
        />


</RelativeLayout>