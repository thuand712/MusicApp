<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:elevation="5dp">
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp">
        <TextView
            android:textSize="20sp"
            android:layout_margin="15dp"
            android:text="1"
            android:id="@+id/txtDanhSachIndex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/txtTenBaiHat"
            android:text="Ten ca khuc"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="250dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:layout_toRightOf="@id/txtDanhSachIndex"
            android:textColor="@color/colorBlack"/>
        <TextView
            android:id="@+id/txtTenCaSi"
            android:layout_toRightOf="@id/txtDanhSachIndex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtTenBaiHat"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/colorGray"
            android:textSize="20sp"
            android:text="Ten ca si"/>
        <ImageView
            android:id="@+id/imgLuotThichDanhSachBaiHat"
            android:layout_marginRight="5dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/iconlove"/>
    </RelativeLayout>

</androidx.cardview.widget.CardView>