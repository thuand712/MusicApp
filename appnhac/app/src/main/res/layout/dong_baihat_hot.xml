<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imgBaiHatHot"
        android:scaleType="fitXY"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_margin="3dp"/>
    <TextView
        android:id="@+id/txtTenBaiHatHot"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="7dp"
        android:maxLines="1"
        android:ellipsize="end"
        android:textColor="@color/colorBlack"
        android:textSize="18sp"
        android:text="Ten bai hat"
        android:layout_toRightOf="@id/imgBaiHatHot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/txtTenCaSiBaiHatHot"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="7dp"
        android:layout_below="@id/txtTenBaiHatHot"
        android:maxLines="1"
        android:ellipsize="end"
        android:textColor="@color/colorGray"
        android:textSize="18sp"
        android:text="Ca si"
        android:layout_toRightOf="@id/imgBaiHatHot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <ImageView
        android:id="@+id/imgLuotThich"
        android:src="@drawable/iconlove"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginRight="10dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"/>

</RelativeLayout>